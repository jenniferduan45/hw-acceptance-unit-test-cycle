<h2>Movies With Same Director <em><%= @movie.director %></em> As <em><%= @movie.title %></em></h2>

<ul id="search_results">
  <li>
    Director:
    <%= @movie.director %>
  </li>
  <% @same_director_movies.each do |movie| %>
    <li>
      <%= movie.title %>
    </li>
  <% end %>
</ul>

<%= link_to 'Back to movie list', movies_path, :class => 'btn btn-primary col-2' %>
